<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="bookstore_database">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>pl.sda.intermediate11.bookstore.users.entities.User</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/bookstore_database?useSSL=false&amp;serverTimezone=Europe/Warsaw"/>
            <!--<property name="hibernate.connection.driver_class" value=""/>-->
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <!--<property name="hibernate.archive.autodetection" value="class"/>-->
            <!--<property name="hibernate.show_sql" value="true"/>-->
            <!--<property name="hibernate.format_sql" value="true"/>-->
            <!--<property name="hbm2ddl.auto" value="update"/>-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL57Dialect"/>
        </properties>
    </persistence-unit>
</persistence>
